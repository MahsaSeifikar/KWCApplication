<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHeight"
        >

    <RelativeLayout
        android:id="@+id/rrtoolbar"
        android:layout_width="@dimen/toolbarIcon"
        android:layout_marginRight="@dimen/marginMedium"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="@dimen/toolbarIcon"
            android:layout_height="@dimen/toolbarIcon"
            android:layout_centerInParent="true"
            android:textColor="@color/float_transparent"
            android:background="@drawable/shop"
            android:id="@+id/toolbarLeftIcon"
            />

        <TextView
            android:id="@+id/textNumOrder"
            android:layout_width="@dimen/toolbarIcon"
            android:layout_height="match_parent"
            android:text=""
            android:layout_marginTop="@dimen/marginSmall"
            android:gravity="center|top"
            android:textColor="@color/kwc_black"
            />
    </RelativeLayout>
        <TextView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="&#xf053;"
            android:layout_alignBaseline="@+id/rrtoolbar"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textSizeLarge"
            android:textColor="@color/kwc_red"
            />

        <TextView
            android:id="@+id/titleImake_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/News_EN"
            android:layout_toRightOf="@+id/back"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textSizeLarge"
            />
    </RelativeLayout>


    <View

        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:textSize="@dimen/textSizeMedium"
        android:background="@color/kwc_red" />


    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1.7"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginSmall"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/categori_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSizeMedium"
                    android:textColor="@android:color/black"
                    android:text="@string/categori_fa"
                    android:gravity="center"
                    android:layout_margin="@dimen/marginXSmall"
                    android:padding="@dimen/marginSmall"
                    />
                <Spinner
                    android:layout_gravity="center"
                    android:id="@+id/categori_spinner"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/marginXSmall"
                    android:padding="@dimen/marginXSmall"
                    android:gravity="center"
                    android:background="@drawable/spinner_rect"
                    android:foregroundGravity="center"
                    android:layout_height="wrap_content"
                    >
                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="@dimen/marginSmall"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/product_group_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSizeMedium"
                    android:textColor="@android:color/black"
                    android:text="@string/product_group_fa"
                    android:gravity="center"
                    android:layout_margin="@dimen/marginXSmall"
                    android:padding="@dimen/marginXSmall"
                    />
                <Spinner
                    android:layout_gravity="center"
                    android:id="@+id/product_group_spinner"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/marginXSmall"
                    android:padding="@dimen/marginXSmall"
                    android:gravity="center"
                    android:background="@drawable/spinner_rect"
                    android:foregroundGravity="center"
                    android:layout_height="wrap_content">
                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="@dimen/marginSmall"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/product_title_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSizeMedium"
                    android:textColor="@android:color/black"
                    android:text="@string/product_title_fa"
                    android:gravity="center"
                    android:layout_margin="@dimen/marginXSmall"
                    android:padding="@dimen/marginXSmall"
                    />
                <Spinner
                    android:layout_gravity="center"
                    android:id="@+id/product_title_spinner"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/marginXSmall"
                    android:padding="@dimen/marginXSmall"
                    android:gravity="center"
                    android:background="@drawable/spinner_rect"
                    android:foregroundGravity="center"
                    android:layout_height="wrap_content">
                </Spinner>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"

                android:layout_margin="@dimen/marginSmall"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/product_price_web_textview"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSizeMedium"
                    android:textColor="@android:color/black"

                    android:gravity="center"
                    android:background="@drawable/rect_border"
                    android:layout_margin="@dimen/marginSmall"
                    android:padding="@dimen/marginXSmall"
                    />
                <TextView
                    android:layout_toRightOf="@+id/product_price_web_textview"
                    android:id="@+id/product_price_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSizeMedium"
                    android:textColor="@android:color/black"
                    android:text="@string/product_price"
                    android:gravity="center"
                    android:layout_margin="@dimen/marginSmall"
                    android:padding="@dimen/marginXSmall"
                    />
                <EditText
                    android:id="@+id/product_number_enter_textview"
                    android:layout_width="@dimen/weight_edit_makeorder"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSizeMedium"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    style="@style/EditText"
                    android:cursorVisible="false"
                    android:singleLine="true"
                    android:layout_margin="@dimen/marginSmall"
                    android:phoneNumber="true"
                    android:padding="@dimen/marginXSmall"
                    android:layout_below="@+id/product_price_web_textview"
                    android:layout_toLeftOf="@+id/product_price_textview"
                    android:layout_toStartOf="@+id/product_price_textview" />
                <TextView
                    android:id="@+id/product_number_textview"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/product_number_enter_textview"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSizeMedium"
                    android:textColor="@android:color/black"
                    android:text="@string/product_number_fa"
                    android:gravity="center"
                    android:layout_below="@+id/product_price_textview"
                    android:layout_margin="@dimen/marginSmall"
                    android:padding="@dimen/marginXSmall"
                    />

            </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/marginMedium"
                android:gravity="center"
                android:layout_weight="0.3"
                android:weightSum="2"
                >
                <Button
                    android:layout_weight="1"
                    android:id="@+id/listOrderbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSizeMedium"
                    android:background="@drawable/red_button_background"
                    android:textColor="@color/sweet_dialog_bg_color"
                    android:text="@string/list_order_fa"
                    android:gravity="center"
                    android:layout_margin="@dimen/marginXSmall"
                    android:padding="@dimen/marginXSmall"
                    />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/addListButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSizeMedium"
                    android:background="@drawable/red_button_background"
                    android:textColor="@color/sweet_dialog_bg_color"
                    android:text="@string/add_list_fa"
                    android:gravity="center"
                    android:layout_margin="@dimen/marginXSmall"
                    android:padding="@dimen/marginXSmall"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>