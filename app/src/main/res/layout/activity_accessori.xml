<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_margin="@dimen/accesori_margin"
            android:layout_height="wrap_content"
            android:id="@+id/kwc_textview"
            android:textSize="@dimen/accesori_size_text"
            android:layout_gravity="center"
            android:text="KWC"
            android:gravity="center|center_vertical"
            android:textColor="@android:color/black"
            >

        </TextView>


        <View
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:textSize="@dimen/textSizeMedium"
            android:background="@color/kwc_gray_item"
            />



        <TextView

            android:layout_width="wrap_content"
            android:layout_margin="@dimen/accesori_margin"

            android:layout_height="wrap_content"
            android:id="@+id/franke_textview"
            android:textSize="@dimen/accesori_size_text"
            android:layout_gravity="center"
            android:text="Franke"
            android:gravity="center|center_vertical"
            android:textColor="@android:color/black"
            >

        </TextView>


        <View
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:textSize="@dimen/textSizeMedium"
            android:background="@color/kwc_gray_item"
            />


        <TextView

            android:layout_width="wrap_content"
            android:layout_margin="@dimen/accesori_margin"

            android:layout_height="wrap_content"
            android:id="@+id/oil_textview"
            android:textSize="@dimen/accesori_size_text"
            android:layout_gravity="center"
            android:text="Oil"
            android:gravity="center|center_vertical"
            android:textColor="@android:color/black"
            >

        </TextView>


        <View
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:textSize="@dimen/textSizeMedium"
            android:background="@color/kwc_gray_item"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_margin="@dimen/accesori_margin"
            android:layout_height="wrap_content"
            android:id="@+id/greesal_textview"
            android:textSize="@dimen/accesori_size_text"
            android:layout_gravity="center"
            android:text="Geesa"
            android:gravity="center|center_vertical"
            android:textColor="@android:color/black"
            >

        </TextView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >



        <View
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:textSize="@dimen/textSizeMedium"
            android:background="@color/kwc_gray_item"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_margin="@dimen/accesori_margin"
            android:layout_height="wrap_content"
            android:id="@+id/ideal_textview"
            android:textSize="@dimen/accesori_size_text"
            android:layout_gravity="center"
            android:text="Ideal Standard"
            android:gravity="center|center_vertical"
            android:textColor="@android:color/black"
            >

        </TextView>

        <View
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:textSize="@dimen/textSizeMedium"
            android:background="@color/kwc_gray_item"
            />

    </LinearLayout>
    <View
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:textSize="@dimen/textSizeMedium"
        android:background="@color/kwc_gray_item"
        android:layout_margin="@dimen/marginSmall"/>


    <GridView
        android:layout_margin="@dimen/marginMedium"
        android:id="@+id/projectsGridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:layout_gravity="center"
        android:gravity="center"
        android:numColumns="2"/>
</LinearLayout>