<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbarHeight"
           >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/toolbarIcon"
                    android:text="home"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/home"
                    android:id="@+id/toolbarLeftIcon"/>


                <ImageView
                    android:id="@+id/navigation"
                    android:src="@drawable/ic_ab_drawer"
                    android:layout_margin ="5dp"
                    android:padding="10dp"
                    android:layout_width="@dimen/threeline_height"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="icon"
                    android:layout_toRightOf="@+id/navigation"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textSizeLarge" />


                <ImageView
                    android:id="@+id/tittle_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="icon"
                    android:src="@drawable/icon_toolbar"
                    android:layout_toRightOf="@+id/navigation"
                    />
            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/kwc_red"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mainLinearLayout">
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        >
        <RelativeLayout
            android:layout_width="@dimen/navdrawer_width"
            android:layout_height="match_parent"
            >
    <ListView
        android:id="@+id/navdrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="@dimen/navMarginTop"
        android:background="@color/kwc_gray_background"
        android:choiceMode="singleChoice"
        android:divider="@color/transparent"
        android:dividerHeight="2dp"
        android:cacheColorHint="@color/transparent"

        ></ListView>


            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <TextView
                    android:id="@+id/la"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@color/sweet_dialog_bg_color"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/kwc_red"
                    />

                <TextView
                    android:id="@+id/youtube"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="#cc181e"
                    android:text="@string/gear"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/sweet_dialog_bg_color"
                    />


                <TextView
                    android:id="@+id/telegram"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="#0088cc"
                    android:text="&#x006D;"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/sweet_dialog_bg_color"
                    />
                <TextView
                    android:id="@+id/ggplus"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="#D44230"
                    android:text="&#x006C;"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/sweet_dialog_bg_color"
                    />

                <TextView
                    android:id="@+id/insta"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="#125688"
                    android:text="&#x006F;"

                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/sweet_dialog_bg_color"
                    />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>